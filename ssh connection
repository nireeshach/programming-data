in user settings
// Provider for formatting. Possible options include 'autopep8' and 'yapf'.
    "python.formatting.provider": "autopep8",

    // Format the document upon saving.
    "[python]":{
        "editor.formatOnSave":true
    },  

    // Configure glob patterns for excluding files and folders.
    "files.exclude": {
        // defaults
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,

        // Python
        "**/__pycache__": true,
        "**/*.pyc": true,
        ".venv": true,
        "venv": true,


        // domino data labs
        "**/.dominokeep": true,
        "**/.dominoignore": true,
        "**/.dominoresults": true,
        "domino.log": true,
        "dominostats.json": true,
        ".domino": true
    }



